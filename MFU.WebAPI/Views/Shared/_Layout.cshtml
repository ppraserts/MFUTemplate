                </div><!-- /.widget-body -->
            </div><!-- /.widget-box -->*@
    </div><!-- /.main-container -->

    <div class="footer">
        <div class="footer-inner">
            <div class="footer-content">
                <span class="bigger-100">
                    <span style="text-align:center;">
                        &copy; @DateTime.Now.Year - Powered by Center for Information Technology Services
                        Mae Fah Luang University
                        @*&copy; @DateTime.Now.Year - จัดทำโดย ศูนย์บริการเทคโนโลยีสารสนเทศ มหาวิทยาลัยแม่ฟ้าหลวง)*@
                    </span>
                </span>
                &nbsp; &nbsp;
                <span class="action-buttons">
                    <a href="cits@mfu.ac.th">
                        <i class="ace-icon fa fa-envelope pink bigger-150"></i>
                    </a>

                    <a href="https://www.facebook.com//mfu.cits">
                        <i class="ace-icon fa fa-facebook-square text-primary bigger-150"></i>
                    </a>

                    <a href="http://www.mfu.ac.th/center/cits2015/">
                        <i class="ace-icon fa fa-globe blue bigger-150"></i>
                    </a>
                </span>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Scripts")

    <script type="text/javascript">
        try { ace.settings.loadState('main-container') } catch (e) { }
        try { ace.settings.loadState('sidebar') } catch (e) { }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>